{
	"name": "@nagauta-stack/web",
	"private": true,
	"scripts": {
		"dev": "concurrently \"tsx watch src/index.ts\" \"tailwindcss -i src/styles.css -o public/styles.css --watch\"",
		"build": "tailwindcss -i src/styles.css -o public/styles.css --minify && tsc",
		"check-types": "tsc --noEmit",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:e2e": "playwright test"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.9",
		"drizzle-orm": "^0.45.1",
		"hono": "^4.0.0",
		"postgres": "^3.4.8",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@nagauta-stack/config": "workspace:*",
		"@playwright/test": "^1.58.2",
		"@tailwindcss/cli": "^4.1.18",
		"@types/node": "^25.2.3",
		"concurrently": "^9.2.1",
		"drizzle-kit": "^0.31.9",
		"tailwindcss": "^4.1.18",
		"tsx": "^4.0.0",
		"typescript": "^5.9.2",
		"vitest": "^4.0.18"
	}
}
